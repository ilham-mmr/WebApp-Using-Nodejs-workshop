<%- include('partials/header.ejs') %>


    <!-- Add field -->
    <div class="row">
        <h1 class="text-center">Add Todo Item</h1>

        <div class="col-md-6 offset-md-3">
            <form action="/todos" method="POST">
                <div class="mb-3">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="name">
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">submit</button>
                </div>
            </form>
        </div>
    </div>


    <!-- Todo list table -->
    <div class="text-center mb-3">
        <h1>Todo List</h1>
    </div>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <table class="table table-success table-striped text-center">
                <tr class="table-primary">
                    <th scope="col">Todo Item</th>
                    <th scope="col">Action</th>
                </tr>
                <!-- IF THERE IS NO TO DO ITEM THEN SHOW SOMETHING -->
                <% if (!todos.length> 0) { %>
                    <tr>
                        <td colspan="2">No todo list! Add now!</td>
                    </tr>
                    <% } %>

                        <!-- PART WHERE WE DYNAMICALLY DISPLAY DATA TO THE TABLE -->
                        <% for(let todo of todos) { %>
                            <tr>
                                <td>
                                    <p>
                                        <%= todo.name %>
                                    </p>
                                </td>

                                <td>
                                    <div class="text-center">
                                        <div class="mb-1">
                                            <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
                                                <button class="btn btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="mb-1">
                                            <form action="/todos/<%= todo._id%>/edit" method="GET">
                                                <button class="btn btn-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% } %>


            </table>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>